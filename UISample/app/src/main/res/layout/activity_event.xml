<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.EventActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Events Near You"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton13"
        android:layout_above="@+id/searchView"
        android:layout_alignEnd="@+id/searchView" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:queryHint="City or Attraction"
        android:id="@+id/searchView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"></SearchView>

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/music"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton5"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/searchView"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/comedy"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton8" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/sports"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignEnd="@+id/searchView"
        android:id="@+id/imageButton10" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/food"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton9" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/cultural"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton8"
        android:id="@+id/imageButton11" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:src="@drawable/historical"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignStart="@+id/imageButton10" />


</RelativeLayout>
