<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.EastSideActivity"
    android:fillViewport="false"
    >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/eastside"

            android:background="#191516"

            android:id="@+id/imageView6"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp" />


    <ImageButton
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/home"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:id="@+id/imageButton13"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="East Side Marios"
            android:background="#191516"
            android:textSize="23dp"
            android:textColor="#a4c639"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="59322 Third Avenue | London, Ontario | S4T 2H6"
            android:textColor="@color/white"
            android:id="@+id/textView11"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignEnd="@+id/imageButton2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="#191516"
            android:textSize="23dp"
            android:textColor="#a4c639"
            android:gravity="top"
            android:text="About"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:id="@+id/textView13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="East Side Mario's is a Canadian chain of casual dining restaurants,managed by its parent holding company Prime Restaurants, which operates in Canada and the United States. The restaurant specializes in Italian-American cuisine. "
            android:id="@+id/textView12"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#191516"
            android:textSize="23dp"
            android:textColor="#a4c639"
            android:gravity="top"
            android:text="Rating"
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/add"
            android:id="@+id/imageButton"
            android:layout_alignTop="@+id/textView14"
            android:layout_alignParentEnd="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"

            android:layout_alignTop="@+id/textView14"
            android:layout_toStartOf="@+id/imageButton" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:id="@+id/btndownarrow"

            android:background="@android:color/transparent"
            android:src="@drawable/downarrow"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/savetotrip"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"


        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/imageButton2" />


</RelativeLayout>
