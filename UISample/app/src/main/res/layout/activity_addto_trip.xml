<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.AddtoTripActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Your Trip"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/btnTripHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="goBackHome"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/cntower"
        android:background="#191516"
        android:id="@+id/imageView7"
        android:layout_above="@+id/imageView6"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:gravity="top"
        android:text="CN Tower"
        android:textSize="23dp"
        android:typeface="sans"
        android:textColor="#d8002a"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="234 Queen's Street | Toronto, Ontario | S4I 3P6"
        android:textColor="@color/white"
        android:id="@+id/textView18"
        android:layout_below="@+id/button3"
        android:layout_alignEnd="@+id/button3" />


    /////////////////////////

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/eastside"

        android:background="#191516"

        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/btnEastSide"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:gravity="top"
        android:text="East Side Marios "
        android:textSize="23dp"
        android:typeface="sans"
        android:textColor="#d8002a"
        android:id="@+id/btnEastSide"
        android:onClick="gotoEastSide"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="59322 Third Avenue | London, Ontario | S4T 2H6"
        android:textColor="@color/white"
        android:layout_below="@+id/btnEastSide"
        android:layout_alignEnd="@+id/btnEastSide" />

</RelativeLayout>
