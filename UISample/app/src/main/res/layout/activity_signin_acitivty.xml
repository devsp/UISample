<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.SigninAcitivty">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  Username"
        android:id="@+id/lblUsername"
        android:drawableLeft="@drawable/contacts24"


        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/btnSignIn" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:layout_below="@+id/lblUsername"
        android:layout_alignStart="@+id/lblUsername"
        android:id="@+id/lblPassword"
        android:drawableLeft="@drawable/padlock24"

        />

    <Button

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="#aadd61"
        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:typeface="sans"
        android:onClick="validate"
        android:theme="@android:style/Holo.ButtonBar"
        android:id="@+id/btnSignIn"
        android:textColor="#ff1a47"
        android:textSize="23dp"
        android:layout_below="@+id/btnForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />


    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Forgot Password?"

        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#d8002a"
        android:theme="@android:style/Holo.ButtonBar"
        android:background= "@android:color/transparent"
        android:layout_below="@+id/lblPassword"
        android:layout_alignStart="@+id/lblPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Account?"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#0d0f04"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignStart="@+id/btnSignIn" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#ff1a47"
        android:text="Register"
        android:onClick="registerSignIn"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnSignIn"
        android:layout_marginBottom="33dp" />

</RelativeLayout>
