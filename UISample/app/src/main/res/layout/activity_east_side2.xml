<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.EastSide2Activity">


    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton13"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="East Side Marios"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/uparrow"
        android:id="@+id/upArrow"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="top"
        android:text="Hours"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/upArrow"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:gravity="top"
        android:text="Monday-Friday: 9am - 7pm | Saturday-Sunday: 9am - 11pm"

        android:layout_marginTop="34dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView16" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="top"
        android:text="Website"

        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView17" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        
        android:textColor="@color/white"
        android:gravity="center"
        android:text="www.eastsidemarios.ca"

        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
