<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.ReviewActivity">

    <TextView
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Review"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#a4c639"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton13"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/eiffel"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:id="@+id/imageView3" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Paris, France"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#ff1a47"

        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"

        android:rating="4"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/cntower"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/textView9"
        android:id="@+id/imageView4" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Toronto, Canada"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#ff1a47"

        android:textStyle="bold"
        android:typeface="sans"

        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3"

        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView3"
        android:id="@+id/ratingBar2" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/add"
        android:scaleType="fitXY"
        android:background="#191516"
        android:id="@+id/imageButton5"
        android:layout_above="@+id/imageView3"
        android:layout_toEndOf="@+id/textView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/whitehouse"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:id="@+id/imageView5" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="The White House"
        android:background="#191516"
        android:textSize="23dp"
        android:textColor="#ff1a47"

        android:textStyle="bold"
        android:typeface="sans"

        android:layout_alignTop="@+id/imageView5"
        android:layout_alignStart="@+id/ratingBar2"
        android:id="@+id/textView10" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5"

        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignStart="@+id/textView10" />

</RelativeLayout>
