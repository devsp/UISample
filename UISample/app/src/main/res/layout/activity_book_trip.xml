<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.sanjanapillai.uisample.BookTripActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Book A Trip"
        android:background="#0d0f04"
        android:textSize="23dp"
        android:textColor="#ff1a47"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/home"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/btnhomeBT"
        android:onClick="goHome"
        android:layout_above="@+id/searchView"
        android:layout_alignEnd="@+id/searchView" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#0d0f04"
        android:layout_marginTop="32dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/searchView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="YYYY/MM/DD"
        android:gravity="center"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/searchView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#0d0f04"

        android:id="@+id/textView3"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="YYYY/MM/DD"
        android:gravity="center"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/editText"
        android:id="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#0d0f04"

        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/adduser"
        android:scaleType="fitXY"
        android:layout_marginEnd="46dp"
        android:id="@+id/imageButton7"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accomodation"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#0d0f04"
        android:layout_below="@+id/imageButton7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/textView5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resort"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox2"
        android:id="@+id/checkBox4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:backgroundTint="#0d0f04"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#ff1a47"
        android:textSize="20dp"
        android:text="Search"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:queryHint="City or Attraction"
        android:id="@+id/searchView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"></SearchView>
</RelativeLayout>
